<table class="primary">
  <thead>
    <tr>
      <th>Description</th>
      <th>Notes</th>
      <th>Borrowed since</th> 
      <th>State</th>
      <th> </th>
    </tr>
  </thead>

  <tbody>
    {{#each itemController='articles/item'}}
      <tr>
        <td>{{model.description}}</td>
        <td>{{model.notes}}</td>
        <td>{{model.createdAt}}</td>
        <td>{{view select content=states selection=model.state}}</td>
        <td>
          {{#if model.isSaving}}
            <p>Saving da shit...</p>
          {{else}}
            {{#if model.isDirty}}
              <button {{action 'save' model}}>Save</button>
            {{else}}
              <p></p>
            {{/if}}
          {{/if}}
        </td>
      </tr>
    {{/each}}
  </tbody>
  
</table>